<UserControl x:Class="Bestiaire_Witcher.UCFooter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel DockPanel.Dock="Bottom" Height="20" Orientation="Horizontal">
        <TextBlock Style="{StaticResource stylePourTextBlockFooter}">Race:</TextBlock>
        <TextBox Name="CompteurRace" Style="{StaticResource stylePourTextBoxFooter}" Text="{Binding MyMainWindow.CompteurRaces}"></TextBox>
        <TextBlock Style="{StaticResource stylePourTextBlockFooter}" Margin="20,0,0,0">Créature:</TextBlock>
        <TextBox Name="CompteurCreature" Style="{StaticResource stylePourTextBoxFooter}"></TextBox>
    </StackPanel>
</UserControl>
